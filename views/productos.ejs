    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Productos</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <%- include('parciales/nav')%>




        <h1 class="h1">Productos</h1>

            <div class="row row-cols-1 row-cols-md-3 g-4 p-5">
                <% productos.forEach(function(productos) { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="50%" height="225"  src="https://source.unsplash.com/featured/300x201" alt="Card image cap">

                            <div class="card-body">
                                <h3 class="h3"><%= productos.nombre%></h3>
                                <p class="card-text"><%= productos.descripcion%></p>
                                    <p><span>Cantidad: <%= productos.stock%></span></p>
                                <p class="card-text"> <strong> <%= productos.precio%> </strong> </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button class="btn btn-dark" onclick="agregarCarro(`<%=productos.nombre%>`,`<%=productos.precio%>`,`<%=productos.id%>`,`<%= productos.stock%>`)" >Agregar al carro</button>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                    <%})%>
              </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
    </html>